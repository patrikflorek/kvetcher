<SketcherDemoAppRoot>:
    sketcher: sketcher
    sketcher_container: sketcher_container
    canvas:
        Color:
            rgba: 0, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            id: sketcher_container
            Sketcher:
                id: sketcher
                background_color: 1, 0, 1, 0.4
                size: 280, 560
                pos_hint: {'center_x': 0.5, 'center_y': 0.5}
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Center'
            Button:
                text: 'Clear'
            Button:
                text: 'Layouts'
            Button:
                text: 'Pen'
