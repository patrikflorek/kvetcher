#:import Sketcher kvetcher.sketcher.Sketcher

<SketcherDemoAppRoot>:
    sketcher: sketcher
    sketcher_container: sketcher_container
    canvas:
        Color:
            rgba: 0, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        AnchorLayout:
            id: sketcher_container
            anchor_x: 'center'
            anchor_y: 'center'
            Sketcher:
                id: sketcher
                background_color: 1, 0, 1, 0.4
                size: 560, 280 
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Center'
                on_release: app.reset_transformations()
            Button:
                text: 'Clear'
                on_release: app.clear_overlays()
            Button:
                text: 'Layouts'
            Button:
                text: 'Pen'
                on_release: app.open_pen_popup()
