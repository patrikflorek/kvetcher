<SketcherDemoAppRoot>:
    sketcher: sketcher
    canvas:
        Color:
            rgba: 0, 1, 1, 0.5
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'vertical'
        RelativeLayout:
            Sketcher:
                id: sketcher
                background_color: 1, 0, 1, 0.5
                size: 320, 640
                center: self.parent.center
        BoxLayout:
            orientation: 'horizontal'
            size_hint_y: None
            height: '40dp'
            Button:
                text: 'Center'
            Button:
                text: 'Clear'
            Button:
                text: 'Layouts'
            Button:
                text: 'Pen'
